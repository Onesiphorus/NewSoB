<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/btn_gear"
        android:text="@string/gear_text"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/btn_clothing"
        android:text="@string/clothing_text"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="@android:color/holo_blue_dark"
        android:id="@+id/btn_melee"
        android:text="@string/melee_text"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ranged"
        android:background="@drawable/button_background"
        android:textColor="@android:color/holo_blue_dark"
        android:text="@string/ranged_text"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_attachments"
        android:background="@drawable/button_background"
        android:textColor="@android:color/holo_blue_dark"
        android:text="@string/attachment_text"/>
</LinearLayout>

