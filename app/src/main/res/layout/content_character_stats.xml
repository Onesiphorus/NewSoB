<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:keepScreenOn="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:keepScreenOn="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:keepScreenOn="true"
                android:text="@string/agility"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                android:id="@+id/agility_label"/>

            <TextView
                android:id="@+id/agility_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:keepScreenOn="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:keepScreenOn="true"
                android:text="@string/cunning"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                android:id="@+id/cunning_label"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:id="@+id/cunning_value"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:keepScreenOn="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:keepScreenOn="true"
                android:text="@string/spirit"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                android:id="@+id/spirit_label"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:id="@+id/spirit_value"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:keepScreenOn="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_gravity="center|center_horizontal"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:keepScreenOn="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:keepScreenOn="true"
                android:text="@string/strength"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                android:id="@+id/strength_label"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:id="@+id/strength_value"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:keepScreenOn="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:keepScreenOn="true"
                android:text="@string/lore"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                android:id="@+id/lore_label"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:id="@+id/lore_value"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:keepScreenOn="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:keepScreenOn="true"
                android:text="@string/luck"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                android:id="@+id/luck_label"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:id="@+id/luck_value"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:keepScreenOn="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_gravity="center|center_horizontal"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:keepScreenOn="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:keepScreenOn="true"
                android:text="@string/health"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                android:id="@+id/health_label"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:id="@+id/health_value"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:keepScreenOn="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:keepScreenOn="true"
                android:text="@string/defense"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                android:id="@+id/defense_label"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:id="@+id/defense_value"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:keepScreenOn="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:keepScreenOn="true"
                android:text="@string/armor"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                android:id="@+id/armor_label"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:id="@+id/armor_value"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:keepScreenOn="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_gravity="center|center_horizontal"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:keepScreenOn="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:keepScreenOn="true"
                android:text="@string/sanity"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                android:id="@+id/sanity_label"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:id="@+id/sanity_value"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:keepScreenOn="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:keepScreenOn="true"
                android:text="@string/willpower"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                android:id="@+id/willpower_label"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textAlignment="center"
                android:id="@+id/willpower_value"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:keepScreenOn="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:keepScreenOn="true"
                android:text="@string/spirit_armor"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                android:id="@+id/spirit_armor_label"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="24sp"
                android:id="@+id/spirit_armor_value"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>