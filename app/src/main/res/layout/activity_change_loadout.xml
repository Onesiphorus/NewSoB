<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cowboytoon"
    android:orientation="vertical"
    tools:context=".Activities.Main.Inventory.Equip.ChangeLoadoutActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="124dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_equip_hat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/hat"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/num_hats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:gravity="left"
        android:paddingLeft="24dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_equip_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/face"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/num_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_equip_shoulders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/shoulders"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/num_shoulers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:paddingRight="12dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left">

        <Button
            android:id="@+id/btn_equip_coat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/coat"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/num_coat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left">

        <Button
            android:id="@+id/btn_equip_torso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/torso"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/num_torso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:gravity="right">

        <Button
            android:id="@+id/btn_equip_belt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/belt"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/num_belt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:paddingRight="12dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_equip_gloves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/gloves"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/num_gloves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@android:color/darker_gray" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="48dp">

        <Button
            android:id="@+id/btn_equip_pants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/pants"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/num_pants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:paddingRight="24dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@android:color/darker_gray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingTop="48dp">

        <Button
            android:id="@+id/btn_equip_boots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/boots"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@android:color/darker_gray" />

        <TextView
            android:id="@+id/num_boots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:paddingRight="24dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@android:color/darker_gray" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_manage_item_upgrades"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="Attach Upgrades"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/btn_manage_side_bag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="Side Bag"
            android:textColor="@color/colorPrimaryDark" />
    </LinearLayout>
</LinearLayout>