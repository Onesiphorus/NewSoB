<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".Activities.CreateCharacterActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="24sp"
        android:layout_gravity="center|center_horizontal">
        <LinearLayout
            android:keepScreenOn="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:keepScreenOn="true"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:keepScreenOn="true"
                    android:text="@string/agility"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:id="@+id/agility_label"/>

                <TextView
                    android:id="@+id/agility_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textAlignment="center" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:keepScreenOn="true"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:keepScreenOn="true"
                    android:text="@string/cunning"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:id="@+id/cunning_label"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:id="@+id/cunning_value"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:keepScreenOn="true"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:keepScreenOn="true"
                    android:text="@string/spirit"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:id="@+id/spirit_label"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:id="@+id/spirit_value"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:keepScreenOn="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_gravity="center|center_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:keepScreenOn="true"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:keepScreenOn="true"
                    android:text="@string/strength"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:id="@+id/strength_label"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:id="@+id/strength_value"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:keepScreenOn="true"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:keepScreenOn="true"
                    android:text="@string/lore"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:id="@+id/lore_label"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:id="@+id/lore_value"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:keepScreenOn="true"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:keepScreenOn="true"
                    android:text="@string/luck"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:id="@+id/luck_label"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:id="@+id/luck_value"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:keepScreenOn="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_gravity="center|center_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:keepScreenOn="true"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:keepScreenOn="true"
                    android:text="@string/health"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:id="@+id/health_label"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:id="@+id/health_value"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:keepScreenOn="true"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:keepScreenOn="true"
                    android:text="@string/defense"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:id="@+id/defense_label"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:id="@+id/defense_value"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:keepScreenOn="true"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:keepScreenOn="true"
                    android:text="@string/armor"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:id="@+id/armor_label"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:id="@+id/armor_value"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:keepScreenOn="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_gravity="center|center_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:keepScreenOn="true"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:keepScreenOn="true"
                    android:text="@string/sanity"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:id="@+id/sanity_label"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:id="@+id/sanity_value"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:keepScreenOn="true"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:keepScreenOn="true"
                    android:text="@string/willpower"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:id="@+id/willpower_label"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:id="@+id/willpower_value"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:keepScreenOn="true"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:keepScreenOn="true"
                    android:text="@string/spirit_armor"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:id="@+id/spirit_armor_label"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="24sp"
                    android:id="@+id/spirit_armor_value"/>
            </LinearLayout>

        </LinearLayout>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerview_skills"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:textAlignment="center"
                android:background="@android:color/holo_blue_dark"
                tools:listitem="@layout/recyclerview_character">
            </android.support.v7.widget.RecyclerView>
        </RadioGroup>
    </LinearLayout>
    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            style="?metaButtonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <EditText
                    android:id="@+id/character_name_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:hint="@string/hint_enter_name" />

                <Button
                    android:id="@+id/dummy_button"
                    style="?metaButtonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/create" />
            </LinearLayout>


        </LinearLayout>
    </FrameLayout>

</FrameLayout>